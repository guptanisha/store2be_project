<h1>New organization</h1>
<%= error_messages_for :organization %>

<% form_for(:organization, @organization, :url => {:action => 'create'}) do |f| %>
  <p>
    Title: <%= f.text_field 'title' %>
  </p>
  <p>
    Body: <%= f.text_area 'body' %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', :action => nil %>